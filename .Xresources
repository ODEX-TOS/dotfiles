
! ------------------------------------------------------------------------------
! Colour Configuration
! ------------------------------------------------------------------------------

! special
urxvt.foreground:   #d8dee8

urxvt.background:   #2f343f

! urxvt.background:   #1d1f26
urxvt.cursorColor:  #b48ead

! black
urxvt.color0  : #4b5262
urxvt.color8  : #434a5a

! red
urxvt.color1  : #bf616a
urxvt.color9  : #b3555e

! green
urxvt.color2  : #a3be8c
urxvt.color10 : #93ae7c

! yellow
urxvt.color3  : #ebcb8b
urxvt.color11 : #dbbb7b

! blue
urxvt.color4  : #81a1c1
urxvt.color12 : #7191b1

! magenta
urxvt.color5  : #b48ead
*.color13 : #a6809f

! cyan
urxvt.color6  : #89d0bA
